<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.module.mycarehub.model">
    <class name="AppointmentRequests" table="mycarehub_appointment_requests">
        <id name="id" type="java.lang.Integer" column="id" unsaved-value="0">
            <generator class="native"/>
        </id>

        <property name="appointmentUUID" type="java.lang.String" not-null="true" column="appointment_uuid" length="255"/>
        <property name="patientId" type="java.lang.Integer" not-null="true" column="patient_id"/>
        <property name="requestedDate" type="java.util.Date" not-null="true" column="requested_date" length="19"/>
        <property name="requestedTimeSlot" type="java.lang.String" not-null="true" column="requested_time_slot" length="255"/>

        <property name="dateCreated" type="java.util.Date" column="date_created" length="19" />
        <property name="dateChanged" type="java.util.Date" column="date_changed" length="19" />
        <property name="voided" type="java.lang.Boolean" column="retired" length="1"/>
        <property name="dateVoided" type="java.util.Date" column="date_retired" length="19" />
        <property name="voidReason" type="java.lang.String" column="retire_reason" length="255" />

        <many-to-one name="creator" class="org.openmrs.User"/>
        <many-to-one name="voidedBy" class="org.openmrs.User" column="retired_by" />
        <many-to-one name="changedBy" class="org.openmrs.User" column="changed_by" />
        <property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" />
    </class>
</hibernate-mapping>