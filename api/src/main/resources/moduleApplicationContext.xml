<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.mycarehub.api.service.MyCareHubSettingsService</value>
                <bean
                        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager">
                        <ref bean="transactionManager" />
                    </property>
                    <property name="target">
                        <bean class="org.openmrs.module.mycarehub.api.service.impl.MyCareHubSettingsServiceImpl">
                            <constructor-arg name="dao" ref="myCareHubSettingDAO"/>
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors" />
                    </property>
                    <property name="transactionAttributeSource">
                        <ref bean="transactionAttributeSource" />
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="myCareHubSettingDAO" class="org.openmrs.module.mycarehub.api.db.hibernate.HibernateMyCareHubSettingsDao">
        <constructor-arg ref="dbSessionFactory"/>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.mycarehub.api.service.AppointmentRequestsService</value>
                <bean
                        class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager">
                        <ref bean="transactionManager" />
                    </property>
                    <property name="target">
                        <bean class="org.openmrs.module.mycarehub.api.service.impl.AppointmentRequestsServiceImpl">
                            <constructor-arg name="dao" ref="appointmentRequestsDAO"/>
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors" />
                    </property>
                    <property name="transactionAttributeSource">
                        <ref bean="transactionAttributeSource" />
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="appointmentRequestsDAO" class="org.openmrs.module.mycarehub.api.db.hibernate.HibernateAppointmentRequestsDao">
        <constructor-arg ref="dbSessionFactory"/>
    </bean>
</beans>
